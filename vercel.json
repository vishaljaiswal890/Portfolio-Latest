{
  "version": 2,
  "builds": [
    {
      "src": "Backend/*",
      "use": "@vercel/node",
      "config": {
        "watch": ["Backend/**/*"]
      }
    },
    {
      "src": "Frontend/",
      "use": "@vercel/react",
      "config": {
        "watch": ["Frontend/**/*"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/*",
      "dest": "/api/*"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}